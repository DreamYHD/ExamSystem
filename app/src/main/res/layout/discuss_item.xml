<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:background="#ffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:background="#ffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/fragment_discuss_item_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="10dp"
                android:lines="2"
                android:text="请教：高等数学作业,如图所示，第三题"
                android:textColor="#040405"
                android:textSize="18sp"/>

            <ImageView
                android:layout_marginTop="5dp"
                android:id="@+id/fragment_discuss_item_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_mood_bad_black_24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"/>

            <ImageView
                android:layout_marginBottom="5dp"
                android:id="@+id/fragment_xuanshang_item_moneyimage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/fragment_discuss_item_description"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_sentiment_very_satisfied_black_24dp"/>

            <TextView
                android:layout_marginBottom="5dp"
                android:textSize="12sp"
                android:id="@+id/fragment_discuss_item_name"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_below="@+id/fragment_discuss_item_description"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/fragment_xuanshang_item_moneyimage"
                android:gravity="center"
                android:text="杨浩东"/>

            <ImageView
                android:layout_marginBottom="5dp"

                android:id="@+id/fragment_xuanshang_item_timeimage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/fragment_discuss_item_description"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/fragment_discuss_item_name"
                android:src="@drawable/ic_access_time_black_24dp"/>

            <TextView

                android:id="@+id/fragment_discuss_item_time"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="3dp"
                android:gravity="center"
                android:text="2017/08/12/2:02"
                android:layout_alignTop="@+id/fragment_xuanshang_item_timeimage"
                android:layout_toEndOf="@+id/fragment_xuanshang_item_timeimage"/>

            <ImageView
                android:layout_marginBottom="5dp"

                android:id="@+id/fragment_xuanshang_item_schoolimage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/fragment_discuss_item_description"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/fragment_discuss_item_time"
                android:src="@drawable/ic_school_black_24dp"/>

            <TextView
                android:layout_marginBottom="5dp"
                android:textSize="12sp"
                android:id="@+id/fragment_discuss_item_school"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/fragment_discuss_item_description"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/fragment_xuanshang_item_schoolimage"
                android:gravity="center"
                android:text="中北大学"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>