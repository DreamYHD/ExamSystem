<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.examsystem.ui.note.AddNoteActivity">
    <LinearLayout
        android:background="@color/colorPrimary"
        android:weightSum="8"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/back_btn_note"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_weight="1"
            android:layout_width="20dp"
            android:layout_height="30dp" />
        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:text="添加笔记"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/post_btn_note"
            android:src="@drawable/ic_check_black_24dp"
            android:layout_weight="1"
            android:layout_width="20dp"
            android:layout_height="30dp" />
    </LinearLayout>
    <TextView
        android:layout_margin="6dp"
        android:text="标签"
        android:textColor="@color/colorPrimary"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/note_tag_edit"
        android:textColor="#707070"
        android:hint="请输入标签"
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/colorPrimary"
        android:layout_margin="6dp"

        android:text="题目"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:textColor="#707070"
        android:hint="请输入题目"
        android:id="@+id/note_short_edit"
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_margin="6dp"
        android:textColor="@color/colorPrimary"
        android:text="详细介绍"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:textColor="#707070"
        android:hint="请输入详细介绍"
        android:id="@+id/note_long_edit"
        android:layout_margin="6dp"
        android:gravity="top"
        android:background="@null"
        android:lines="6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        
        android:layout_margin="6dp"
        android:background="@color/colorSplitWhite"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/add_img_note"
            android:layout_margin="6dp"
            android:background="@color/colorPrimary"
            android:src="@drawable/ic_add_black_24dp"
            android:layout_width="100dp"
            android:layout_height="100dp" />

    </RelativeLayout>

</LinearLayout>
