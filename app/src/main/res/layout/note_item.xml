<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <TextView
        android:id="@+id/description_question_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="90dp"
        android:layout_marginTop="11dp"
        android:text="高等数学的第二型曲线积分例题" />

    <ImageView
        android:id="@+id/img_question_item"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="11dp"
        app:srcCompat="@drawable/math" />

    <TextView
        android:textColor="@color/colorPrimary"
        android:id="@+id/tag_question_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_question_item"
        android:layout_alignStart="@+id/description_question_item"
        android:text="#高等数学" />

    <TextView
        android:background="@color/colorSplitWhite"
        android:layout_marginTop="5dp"
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/tag_question_item"
        android:layout_below="@+id/tag_question_item" />
</RelativeLayout>