<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/discuss_get_bank_image"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:layout_width="0dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#ffff"
                    android:paddingRight="20dp"
                    android:layout_weight="10"
                    android:gravity="center"
                    android:text="问题详情"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

            </LinearLayout>
        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <ImageView
                    android:src="@drawable/ic_face_black_24dp"
                    android:id="@+id/discuss_get_circler_avator_image"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
                <TextView

                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/discuss_get_name_text"
                    android:textSize="20sp"
                    android:layout_marginTop="18dp"
                    android:text="杨浩东"
                    android:layout_toRightOf="@+id/discuss_get_circler_avator_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"/>
                <TextView
                    android:textColor="@color/colorWhite"
                    android:id="@+id/discuss_school_tv"
                    android:layout_marginLeft="5dp"
                    android:text="2017/2/32"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/discuss_get_name_text"
                    android:layout_toRightOf="@+id/discuss_get_circler_avator_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/discuss_time_tv"
                    android:textSize="20sp"
                    android:textColor="@color/colorAccent"
                    android:gravity="center_vertical"
                    android:text="2017-07-01"
                    android:layout_marginRight="30dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <android.support.v7.widget.CardView
                android:background="@drawable/shape_back"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="5dp"
                app:cardCornerRadius="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#8d8d8d"
                    android:background="@color/colorBg"
                    android:id="@+id/discuss_get_content"
                    android:paddingTop="4dp"
                    android:lines="4"
                    android:text="高等数学为什么这么难啊"
                    android:textSize="20dp"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/discuss_get_images_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                android:id="@+id/discuss_get_pinglun_image"
                android:src="@drawable/ic_message_black_24dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <android.support.v7.widget.CardView
                android:background="@drawable/shape_back"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="5dp"
                app:cardCornerRadius="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:textColor="#868686"
                    android:visibility="gone"
                    android:background="@null"
                    android:id="@+id/discuss_add_description_edit"
                    android:paddingTop="4dp"
                    android:lines="3"
                    android:textSize="20sp"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </android.support.v7.widget.CardView>
            <ImageView
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:id="@+id/discuss_send_description_image"
                android:layout_marginRight="30dp"
                android:src="@drawable/ic_send_black_24dp"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/discuss_get_pinnglun_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
