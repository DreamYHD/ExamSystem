<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/answer_type_tv_item"
            android:textSize="18sp"
            android:textColor="#484848"
            android:text="单项选择"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <TextView
            android:textColor="#5f5f5f"
            android:textSize="15sp"
            android:text="测试"
            android:id="@+id/answer_title_tv_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp" />
        <TextView
            android:background="@color/colorSplitWhite"
            android:layout_width="match_parent"
            android:layout_height="5dp" />
        <RadioGroup
            android:id="@+id/answer_radio_group_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:textColor="#5f5f5f"
                android:id="@+id/answer_radio_index1_item"
                android:text="选项1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:background="@color/colorSplitWhite"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <CheckBox
                android:textColor="#5f5f5f"
                android:id="@+id/answer_radio_index2_item"
                android:text="选项2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:background="@color/colorSplitWhite"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <CheckBox
                android:textColor="#5f5f5f"
                android:id="@+id/answer_radio_index3_item"
                android:text="选项3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:background="@color/colorSplitWhite"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <CheckBox
                android:textColor="#5f5f5f"
                android:id="@+id/answer_radio_index4_item"
                android:text="选项4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:background="@color/colorSplitWhite"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
        </RadioGroup>
        <TextView
            android:textColor="#484848"
            android:id="@+id/answer_cankaodaan_title_item"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="参考答案" />
        <TextView
            android:text="参考答案"
            android:textColor="#5f5f5f"
            android:id="@+id/answer_answer_tv_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>