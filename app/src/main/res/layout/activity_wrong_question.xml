<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.examsystem.ui.note.WrongQuestionActivity">
    <LinearLayout
        android:weightSum="8"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="50dp">

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/back_btn_question"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:layout_weight="1"
                android:layout_width="20dp"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/tag_question"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:text="高等数学"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/delete_btn_question"
                android:src="@drawable/ic_delete_black_24dp"
                android:layout_weight="1"
                android:layout_width="20dp"
                android:layout_height="30dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/descriptionShort_question"
        android:textColor="@color/colorPrimary"
        android:paddingLeft="5dp"
        android:gravity="center_vertical"
        android:text="关于高等数学的概述"
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <TextView
        android:background="@color/colorSplitWhite"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <TextView
        android:paddingLeft="5dp"
        android:layout_margin="6dp"
        android:text="具体描述:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/descriptionLong_question"
        android:padding="5dp"
        android:text="广义地说，初等数学之外的数学都是高等数学，也有将中学较深入的代数、几何以及简单的集合论初步、逻辑初步称为中等数学的，将其作为中小学阶段的初等数学与大学阶段的高等数学的过渡。
通常认为，高等数学是由微积分学，较深入的代数学、几何学以及它们之间的交叉内容所形成的一门基础学科。"
        android:lines="8"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="150dp" />
    <ImageView
        android:id="@+id/img_question"
        android:layout_margin="6dp"
        android:src="@drawable/math"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

</LinearLayout>
